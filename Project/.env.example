# HCT Prediction System - Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL connection
POSTGRES_USER=hct_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=hct_db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ===========================================
# REDIS CONFIGURATION
# ===========================================

REDIS_URL=redis://redis:6379/0
# For production with password:
# REDIS_PASSWORD=your_redis_password
# REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# ===========================================
# SECURITY
# ===========================================

# Generate with: openssl rand -hex 32
SECRET_KEY=your_super_secret_key_change_in_production

# JWT settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ===========================================
# AI SERVICE
# ===========================================

AI_SERVICE_URL=http://ai_service:8000
MODEL_PATH=/app/models/trained_pipeline.pkl

# ===========================================
# CORS (Frontend Origins)
# ===========================================

# For development
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80,http://localhost

# For production (replace with your domain)
# ALLOWED_ORIGINS=https://yourdomain.com

# ===========================================
# LOGGING
# ===========================================

# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Python output buffering (keep as 1 for Docker)
PYTHONUNBUFFERED=1

# ===========================================
# OPTIONAL: EMAIL (for notifications)
# ===========================================

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@yourdomain.com

# ===========================================
# OPTIONAL: MONITORING
# ===========================================

# SENTRY_DSN=https://your_sentry_dsn
# PROMETHEUS_ENABLED=true

# ===========================================
# OPTIONAL: CLOUD STORAGE (for model backups)
# ===========================================

# AWS
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=your_bucket_name

# Azure
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string
# AZURE_CONTAINER_NAME=your_container

# GCP
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# GCS_BUCKET_NAME=your_bucket
